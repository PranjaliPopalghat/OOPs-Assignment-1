#include <iostream>
using namespace std;
class AddAmount {
private:
    int amount;
public:
    AddAmount() {
        amount = 50;
    }
    AddAmount(int add) {
        amount = 50 + add;
    }
    void displayAmount() {
        cout << "Final amount in Piggie Bank: $" << amount << endl;
    }
};
int main() {
    AddAmount a1;
    AddAmount a2(100);
    a1.displayAmount();
    a2.displayAmount();
    return 0;
}
